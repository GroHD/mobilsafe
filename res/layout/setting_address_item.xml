<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
       <TextView
            android:id="@+id/tv_phone_titleMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="设置界面222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_phone_titleDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone_titleMes"
            android:textColor="#a9a9a9"
            android:text="设置界面111"
            android:textSize="15sp" />
        <ImageView 
            android:id="@+id/iv_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/jiantou1_pressed"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_centerVertical="true"
            />
        

        <View
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_phone_titleDes"
            android:background="#000"
             >
        </View>

</RelativeLayout>
