<RelativeLayout
    android:id="@+id/rl_root"
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_new_bj"
    tools:context="com.itcasthd.mobilesafe.splashActivity.MainActivity" >

    <TextView 
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"  
        android:textColor="#8B8386"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="#B9D3EE"
        android:shadowRadius="3"
        android:layout_centerInParent="true"
        android:text="版本名称预留"
        />
<!--
	文本框阴影效果
    android:shadowRadius  阴影范围的大小
	android:shadowDx  阴影偏移的x轴
	android:shadowDy  阴影偏移的y轴
	android:shadowColor  阴影的颜色
 -->
 <ProgressBar 
     android:id="@+id/pb_version_load"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/tv_version_name"
     android:layout_centerHorizontal="true"
     />
</RelativeLayout>
