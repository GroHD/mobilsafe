<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bj"
    android:orientation="vertical" >
    <TextView 
        style="@style/TitleStyle"
        android:text="设置中心"
        /><!-- 
         xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itcasthd.mobilesafe"
        上面的是必须的,必须使用这样
        1. mobilesafe  自定义名称
        2.com.itcasthd.mobilesafe  最后的这个是包名
         -->
         
         <com.itcasthd.mobilesafe.view.SettingItemView
	     xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itcasthd.mobilesafe"
	    android:id="@+id/si_setting"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    mobilesafe:destitle="自动更新设置"
	    mobilesafe:desoff="自动更新已关闭"
	    mobilesafe:deson="自动更新已开启"
	    />
	<com.itcasthd.mobilesafe.view.SettingItemView
		    android:id="@+id/si_gsd"
	     xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itcasthd.mobilesafe"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    mobilesafe:destitle="电话归属地显示设置"
	    mobilesafe:desoff="电话归属地显示已关闭"
	    mobilesafe:deson="电话归属地显示已开启"
	    >
	</com.itcasthd.mobilesafe.view.SettingItemView>
	<!-- 手机号码归属地设置 -->
	<com.itcasthd.mobilesafe.view.SettingAddressItem
	    android:id="@+id/sai_gsd_item"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
	<!-- 手机号码归属地显示位置 -->
	<com.itcasthd.mobilesafe.view.SettingAddressItem
	    android:id="@+id/sai_gsd_location"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
	<!-- 是否显示小火箭 -->

	<com.itcasthd.mobilesafe.view.SettingItemView
	     xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itcasthd.mobilesafe"
	    android:id="@+id/si_blackNumber"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    mobilesafe:destitle="黑名单拦截设置"
	    mobilesafe:desoff="黑名单拦截已关闭"
	    mobilesafe:deson="黑名单拦截已开启"
	    />

</LinearLayout>